@using PagedList.Core.Mvc

@model PagedList.Core.IPagedList<WebBanDongHo.Model.Customer>


@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách khách hàng" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

 <div class="product-status mg-b-30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="product-status-wrap">
                            <h4>Account List</h4>
                             <div class="row m-b-30">
                                   <div class="row m-b-30">
            <div class="col-lg-12">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        <select class="custom-select" id="idrole" name="idrole" style="min-width: 216px;min-height: 34px;" asp-items="ViewBag.QuyenTruyCap">
                            <option value="0" disabled selected>Chọn quyền truy cập</option>
                        </select>

                        <select class="custom-select" id="idstatus" name="idstatus" style="min-width: 216px;min-height: 34px;" asp-items="ViewBag.lsTrangThai">
                            <option value="" disabled selected>Chọn trạng thái</option>
                        </select>
                    </div>
                </div>
            </div>

        </div>                  

                              </div>
                            <div class="add-product">
                                <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Create">Add Account</a>
                            </div>
                            <table class="table">
    <thead>
        <tr>
            <th>
                                   CustomerId
            </th>
            <th>
                                    FullName
            </th>
         
            <th>
                                   Avatar
            </th>
            <th>
                                   Address
            </th>
            <th>
                                   Email
            </th>
            <th>
                                   Phone
            </th>
            
           
                     
            <th>
                                   Ative
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
                            @foreach (var item in Model)
                            {
            <tr>
                    <td>
                                        @Html.DisplayFor(modelItem => item.CustomerId)
                    </td>
                <td>
                                        @Html.DisplayFor(modelItem => item.FullName)
                </td>
               
                <td>
                                        @Html.DisplayFor(modelItem => item.Avatar)
                </td>
                <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                </td>

              

                <td>
                                        @Html.DisplayFor(modelItem => item.Ative)
                </td>
                     <td >
                                                                 <a style="padding:5px" data-toggle="tooltip" title="Detail" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Details" asp-route-id="@item.CustomerId"><i class="fa-solid fa-eye" ></i></a>
                                                                             <a style="padding:5px" data-toggle="tooltip" title="Edit" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Edit" asp-route-id="@item.CustomerId"><i class="fa-solid fa-pen-to-square"></i> </a>                                                                                                     
                                                                                 <a style="padding:5px" data-toggle="tooltip" title="Delete" class="pd-setting-ed" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Delete" asp-route-id="@item.CustomerId"><i class="fa fa-trash-o" ></i></a>

                                                         </td>
            </tr>
                            }
    </tbody>
</table>
                            <div class="custom-pagination">
                                <ul class="pagination">
                                    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index"/>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
