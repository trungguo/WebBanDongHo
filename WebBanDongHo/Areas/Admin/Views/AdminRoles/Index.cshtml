@model IEnumerable<WebBanDongHo.Model.Role>

@{
    ViewData["Title"] = "Quản lý Quyền ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

 <div class="product-status mg-b-30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="product-status-wrap">
                            <h4>Role List</h4>
                            <div class="add-product">
                                <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Create">Add Roles</a>
                            </div>
                            <table>
                                <thead>
                                    <tr>

                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Setting</th>

                                    </tr>
                                 </thead>
                                 <tbody>

                            @foreach (var item in Model)
                            {
                                             <tr>
                                                <td scope = "row">@item.RoleId</td>
                                                <td>@item.RoleName</td>
                                                <td>@item.Description</td>
                                                 <td >
                                                     <a style="padding:5px" data-toggle="tooltip" title="Detail" asp-area="Admin" asp-controller="AdminRoles" asp-action="Details" asp-route-id="@item.RoleId"><i class="fa-solid fa-eye" ></i></a>
                                                     <a style="padding:5px" data-toggle="tooltip" title="Edit" asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@item.RoleId"><i class="fa-solid fa-pen-to-square"></i> </a>                                                                                                     
                                                     <a style="padding:5px" data-toggle="tooltip" title="Delete" class="pd-setting-ed" asp-area="Admin" asp-controller="AdminRoles" asp-action="Delete" asp-route-id="@item.RoleId"><i class="fa fa-trash-o" ></i></a>

                                                 </td>

                                              </tr>

                            }
                                  <tbody>


                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
